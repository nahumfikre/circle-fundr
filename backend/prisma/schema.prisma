datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String           @id @default(uuid())
  name               String
  email              String           @unique
  password           String?
  googleId           String?          @unique
  emailVerified      Boolean          @default(false)
  verificationCode   String?
  verificationExpiry DateTime?
  createdAt          DateTime         @default(now())

  // Stripe Connect fields
  stripeAccountId         String?   @unique
  stripeOnboardingStatus  String?   // "pending" | "complete" | "restricted"
  stripeDetailsSubmitted  Boolean   @default(false)
  stripePayoutsEnabled    Boolean   @default(false)
  stripeOnboardedAt       DateTime?

  memberships        Membership[]
  workspaces         WorkspaceMember[]
  organizedEvents    PaymentEvent[]
  payouts            Payout[]

  @@index([stripeAccountId])
}

model Workspace {
  id          String           @id @default(uuid())
  name        String
  inviteCode  String?          @unique
  createdAt   DateTime         @default(now())
  members     WorkspaceMember[]
  circles     Circle[]
}


model WorkspaceMember {
  id           String     @id @default(uuid())
  role         String     // "ADMIN" or "MEMBER"
  userId       String
  workspaceId  String
  createdAt    DateTime   @default(now())

  user         User       @relation(fields: [userId], references: [id])
  workspace    Workspace  @relation(fields: [workspaceId], references: [id])

  @@unique([userId, workspaceId])
}

model Circle {
  id           String          @id @default(uuid())
  name         String
  description  String?
  workspaceId  String
  createdAt    DateTime        @default(now())

  workspace    Workspace       @relation(fields: [workspaceId], references: [id])
  members      Membership[]
  events       PaymentEvent[]
}

model Membership {
  id         String     @id @default(uuid())
  userId     String
  circleId   String
  createdAt  DateTime   @default(now())

  user       User       @relation(fields: [userId], references: [id])
  circle     Circle     @relation(fields: [circleId], references: [id])
  payments   Payment[]

  @@unique([userId, circleId])
}

model PaymentEvent {
  id         String    @id @default(uuid())
  title      String
  amount     Float
  dueDate    DateTime
  circleId   String
  createdAt  DateTime  @default(now())

  // Organizer tracking
  organizerId     String
  organizer       User      @relation(fields: [organizerId], references: [id])

  // Pool balance tracking
  poolBalance     Float     @default(0)

  circle     Circle    @relation(fields: [circleId], references: [id])
  payments   Payment[]
  payouts    Payout[]

  @@index([circleId])
  @@index([organizerId])
}

model Payment {
  id               String        @id @default(uuid())
  paymentEventId   String
  membershipId     String
  amountPaid       Float
  method           String        // "STRIPE" or "MANUAL"
  status           String        // "PAID", "PENDING", "FAILED"
  stripeIntentId   String?

  // Pool transfer tracking
  stripeCheckoutSessionId String?
  stripeTransferId        String?
  transferredAt           DateTime?

  paidAt           DateTime?
  createdAt        DateTime      @default(now())

  event            PaymentEvent  @relation(fields: [paymentEventId], references: [id])
  membership       Membership    @relation(fields: [membershipId], references: [id])

  @@unique([paymentEventId, membershipId])
  @@index([stripeCheckoutSessionId])
}

model Payout {
  id                String       @id @default(uuid())
  paymentEventId    String
  organizerId       String
  amount            Float

  // Stripe metadata
  stripePayoutId    String?      @unique
  stripeTransferId  String?      @unique

  // Status tracking
  status            String       // "pending" | "in_transit" | "paid" | "failed"
  failureReason     String?

  // Timing
  requestedAt       DateTime     @default(now())
  expectedAt        DateTime?
  arrivedAt         DateTime?

  // Relations
  event             PaymentEvent @relation(fields: [paymentEventId], references: [id])
  organizer         User         @relation(fields: [organizerId], references: [id])

  @@index([paymentEventId])
  @@index([organizerId])
  @@index([status])
}
